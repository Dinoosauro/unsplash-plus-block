{
  "manifest_version": 3,
  "name": "Unsplash Plus Block",
  "description": "Block Unsplash+ images from showing when browsing Unsplash",
  "version": "1.2.1",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "./ui/ui.html"
  },
  "content_scripts": [
    {
      "js": [
        "script.js"
      ],
      "matches": [
        "*://*.unsplash.com/*"
      ]
    }
  ],
  "icons": {
    "16": "./assets/icon-16.png",
    "48": "./assets/icon-48.png",
    "128": "./assets/icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{e545735c-2987-420d-93a0-ed1063290426}"
    }
  }
}